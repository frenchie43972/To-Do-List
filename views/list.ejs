<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div> 

    <div class="box">
        
        <% newListItem.forEach(function(item) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <!-- Wil produce the db item ID as a value
                    This is used in the /delete post request to remove the item from teh list -->
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" 
                    onChange="this.form.submit()">
                    <p> <%= item.name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }) %> 

        <form class="item" method="POST" action="/">
            <input type="text" name="newItem" class="form-control top"  
            placeholder="Item to Add" autocomplete="off" required>
            <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>
    </div>

<%- include("footer") -%>

    

    






















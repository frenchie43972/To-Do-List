<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div> 

    <div class="box">
        <% for (let i = 0; i < newListItem.length; ++i) { %>
            <div class="item">
                <input type="checkbox">
                <p> <%= newListItem[i] %> </p>
            </div>
        <% } %> 

        <form class="item" method="POST" action="/">
            <input type="text" name="newItem" class="form-control top"  placeholder="Item to Add" autocomplete="off" required>
            <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>
    </div>

    <%- include("footer") -%>

    

    





















